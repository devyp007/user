<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signup1.fragment.MediaAccountsFragment"
    android:background="@drawable/back_social"
    android:orientation="vertical">
    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/buttonBack"
        android:src="@drawable/ic_back"
        android:scaleType="fitXY"
        android:background="@drawable/flag_transparent"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_65sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:src="@drawable/qwik_care_yellow" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect your Social Media\nAccount"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Business Website"
            android:textColor="@color/black"
            android:textSize="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:hint="Https://"
            android:textSize="@dimen/_12sdp"
            android:drawableLeft="@drawable/icon_location"
            android:background="@drawable/edittext_shape"
            android:drawablePadding="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If Applicable"
            android:textColor="#FB0505"
            android:layout_gravity="end"
            android:background="@drawable/edittext_shape"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_shape"
            android:drawableLeft="@drawable/icon_googlesmall"
            android:text="Https://www.google.com"
            android:textSize="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:drawablePadding="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:text="Https://www.facebook.com"
            android:drawableLeft="@drawable/icon_fbsmall"
            android:gravity="center_vertical"
            android:background="@drawable/edittext_shape"
            android:drawablePadding="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/edittext_shape"
            android:drawableLeft="@drawable/icon_instasmall"
            android:text="Https://www.instagram.com"
            android:textSize="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:drawablePadding="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/edittext_shape"
            android:drawableLeft="@drawable/icon_twitter"
            android:drawablePadding="20dp"
            android:textSize="12dp"
            android:text="Https://www.twitter.com"
            android:gravity="center_vertical"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/buttonNext"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textColor="@color/black"
            android:background="@drawable/button_shape"
            />
    </LinearLayout>



</LinearLayout>