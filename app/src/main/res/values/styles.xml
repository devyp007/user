<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeActionBar.NoActionBar.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppThemeActionBar.NoActionBar.Login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppThemeActionBar.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/primary_dark_color</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppThemeActionBar.NoActionBar.Map" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
    </style>

    <style name="AlertStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SearchStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:fontFamily">@font/poppins_regular</item>

    </style>

    <declare-styleable name="BlurView">
        <attr name="blurOverlayColor" format="color"/>
    </declare-styleable>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#FFC107</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>


</resources>